{
  "name": "fake3d-webgl",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern fake 3D effect with WebGL shaders",
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "lint": "tsc --noEmit && stylelint \"css/**/*.css\"",
    "lint:css": "stylelint \"css/**/*.css\"",
    "format": "prettier --write src/ && prettier --write css/",
    "format:css": "prettier --write css/",
    "fix:css": "stylelint \"css/**/*.css\" --fix",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "gh-pages": "^6.1.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-glsl": "^1.2.1"
  },
  "keywords": [
    "webgl",
    "3d",
    "shader",
    "typescript",
    "vite"
  ],
  "author": "",
  "license": "MIT"
}
